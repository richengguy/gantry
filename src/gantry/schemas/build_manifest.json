{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "/gantry/schemas/build_manifest.json",
    "title": "Gantry Build Manifest",
    "description": "Describes the products generated by running 'gantry build'.",
    "type": "object",
    "$defs": {
        "manifestEntry": {
            "title": "Entry Type",
            "description": "The type of entry within the manifest.",
            "type": "string"
        },
        "serviceImage": {
            "title": "Service Image",
            "description": "A container (i.e. Docker) image for a given service.",
            "type": "object",
            "properties": {
                "type": {
                    "$ref": "#/$defs/manifestEntry",
                    "const": "image"
                },
                "image": {
                    "title": "Image Name",
                    "description": "The complete image name, including any tags.",
                    "type": "string"
                },
                "source": {
                    "title": "Source Dockerfile",
                    "description": "Relative path to the Dockerfile used to build the image.",
                    "type": "string",
                    "pattern": "^(.*)/Dockerfile$"
                }
            },
            "additionalItems": false,
            "required": ["type", "image", "source"]
        },
        "serviceDockerCompose": {
            "title": "Docker Compose",
            "description": "A service group configured for deployment with Docker Compose.",
            "type": "object",
            "properties": {
                "type": {
                    "$ref": "#/$defs/manifestEntry",
                    "const": "docker-compose"
                },
                "path": {
                    "title": "Path to compose folder",
                    "type": "string"
                }
            },
            "required": ["type", "path"]
        }
    },
    "properties": {
        "type": {
            "title": "Manifest Identifier",
            "description": "The identifier used to indicating this a gantry build manifest.",
            "type": "string",
            "enum": ["gantry-manifest"],
            "default": "gantry-manifest"
        },
        "contents": {
            "type": "array",
            "title": "Manifest Contents",
            "items": {
                "anyOf": [
                    { "$ref": "#/$defs/serviceImage" },
                    { "$ref": "#/$defs/serviceDockerCompose" }
                ]
            }
        }
    },
    "required": ["type", "contents"],
    "additionalProperties": false
}
